<%- include("../partials/header.ejs") %>
  <div class="row">
    <div class="col-md-4 card1">
      <div class="user_profile">
        <img class="user_profile_pic" src="<%= user.avatar %>" alt="user profile image">
		  <h1 class="user_name"><%= user.firstname + " " + user.lastname %></h1>
      </div>
	<div class="userinfo">
		<h4> Contact Info </h4>
		<%if(user.email){%>
			<p><i class="fas fa-envelope-square"></i>  <%=user.email %></p>
		<%}%>
		<%if(user.instaId){%>
			<p><i class="fab fa-instagram" ></i>  <%=user.instaId %></p>
		<%}%>
		<%if(user.twitterId){%>
			<p><i class="fab fa-twitter"></i>  <%=user.twitterId %></p>
		<%}%>
		<%if(user.contactNo){%>
			<p><i class="fas fa-phone"></i>  <%=user.contactNo %></p>
		<%}%>
	</div>
		<% if(logedinuser && logedinuser._id.equals(profileuser)){ %>
	<div>
    <a href="/users/<%=user._id%>/edit">Edit Profile</a>
  	</div>
		<%}%>
    </div>
	  
	  
    <div class="col-md-8  border-left">
