			<img src="<%= gadget.img %>" alt="<%= gadget.name %>" style="width:100%;height:200px;">
			<!-- <h4><%= gadget.name %></h4> -->
			<!-- <p><span class="text"><%=gadget.desc %></span></p> -->
			<form method="get" action="/gadget/<%= gadget.id %>"><button type="submit">More Info</button></form>
			</div>
			</div>
