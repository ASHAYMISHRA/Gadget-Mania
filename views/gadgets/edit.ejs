<%- include("../partials/header.ejs") %>
	<div class="row">
		<h1 style="text-align:center">Edit <%= gadget.name%> gadget</h1>
		<div style="width:30%;margin:30px auto;">
			<form action="/gadget/<%= gadget._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="gadget[name]" value="<%= gadget.name %>">
				</div>
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="img" accept="image/*">
                </div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%=gadget.price %>" name='gadget[price]' min="0.01" step="0.01">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" placeholder="img url" name="gadget[img]" value="<%= gadget.img %>">
				</div> -->
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="gadget[desc]" value="<%= gadget.desc%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				
			</form>
			<a href="/gadget">Go Back!</a>
		</div>
	</div>


<%- include("../partials/footer.ejs") %>